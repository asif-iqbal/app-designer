{{#if passiveError}}
    <div>
        {{passiveError}}
    </div>
{{/if}}

{{> labelHint}}
<div class="btn-group-vertical buttonGroup" style="display:block; padding:5px">
    {{#each choices}}
			<div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">
            <a href="#" class="branch-select-item launch btn btn-default roundbtn" role="button" label="{{data_value}}" style="padding:10px">
            {{#if display.image}}
                <center>
                    <img style="max-width: 100%;max-height: 100%; margin-top:5px;" src="{{formDirectory}}{{localize display.image}}"></img>
                </center>
				<div style="clear:both"></div>
            {{/if}}
            {{#if display.text}}
                <h4 style="font-weight:bold;text-align:left">
                    {{{localize display.text}}}
                    <span class="glyphicon" style="float:right"></span>
                </h4>
            {{/if}}
            </a>
			</div>
    {{/each}}
</div>
